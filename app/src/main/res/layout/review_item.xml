<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"  android:clipChildren="false"
    android:clipToPadding="false" >

    <RelativeLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"

        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/man" />


        <TextView
            android:id="@+id/txtFullName"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/photo"
            android:layout_toEndOf="@+id/photo"
            android:text="TextView"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFullName"
            android:layout_toEndOf="@+id/photo"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textSize="10dp" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/reviewerRate"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:progressTint="@color/mtlcyellow"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/photo" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/photo"
            android:layout_below="@+id/photo"
            android:textSize="15dp"
            android:textColor="@color/grey_500"
            android:lines="4"
            android:text="hello this is jimmy i would like to thank this gentelman for taking a good care of my dautther malika" />

    </RelativeLayout>


</LinearLayout>
