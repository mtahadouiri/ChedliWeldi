                android:id="@+id/imageView4"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_centerInParent="true"
                app:srcCompat="@drawable/man" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
