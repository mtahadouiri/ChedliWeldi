            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/grey_300" />
            <RelativeLayout
                android:id="@+id/infoSetting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white">


